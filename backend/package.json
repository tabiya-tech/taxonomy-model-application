{
  "name": "backend",
  "main": "index.js",
  "license": "MIT",
  "prettier": "@tabiya/prettier-config",
  "scripts": {
    "lint": "eslint src test --ext .ts --max-warnings 0",
    "clean": "rimraf -I build coverage deploy",
    "compile": "tsc --build tsconfig.prod.json",
    "prebuild": "npm run clean && npm run compile",
    "build": "esbuild ./src/index.ts ./src/import/async/index.ts ./src/export/async/index.ts ./src/auth/customAuthenticator/index.ts --bundle --tsconfig=tsconfig.prod.json --sourcemap --minify --platform=node --target=node16 --outdir=build --main-fields=module,main",
    "postbuild": "cp ./package.json ./build/ && (cd ./build; npm pkg delete devDependencies; npm pkg delete dependencies; npm pkg delete scripts) && cp ./build/package.json ./build/import/async && mkdir build/rest && mv build/index.js build/index.js.map build/package.json ./build/rest/",
    "test": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js --runInBand",
    "test:smoke": "jest --config jest.smoke.config.js --runInBand test/smoke/*.test.ts",
    "test:e2e": "jest --config jest.e2e.config.js --runInBand",
    "postinstall:win32": "cd .. & link-api-specifications.bat & link-tabiya-prettier-config.bat",
    "postinstall:darwin:linux": "(cd .. && ./link-api-specifications.sh && ./link-tabiya-prettier-config.sh)",
    "postinstall": "run-script-os",
    "generate:openapi": "ts-node ./openapi/generateOpenApiDoc.ts",
    "generate:swagger": "swagger-cli validate ./build/openapi/tabiya-api.json && cp -r ./openapi/swagger-ui-5.3.1-dist ./build/openapi/swagger && cp ./build/openapi/tabiya-api.json ./build/openapi/swagger/",
    "generate:redoc": "redocly lint build/openapi/tabiya-api.json && redocly build-docs ./build/openapi/tabiya-api.json --output ./build/openapi/redoc/index.html",
    "local-server:openapi": "http-server -c-1 build/openapi",
    "format:check": "prettier --check src/ *.js",
    "format": "prettier --write src/ *.js"
  },
  "devDependencies": {
    "@redocly/cli": "~1.0.2",
    "@shelf/jest-mongodb": "~4.1.7",
    "@types/archiver": "^6.0.2",
    "@types/aws-lambda": "~8.10.114",
    "@types/jest": "~29.5.0",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/supertest": "~2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "~0.17.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "extract-zip": "~2.0.1",
    "http-server": "~14.1.1",
    "jest": "~29.7.0",
    "jest-extended": "~4.0.2",
    "jest-performance-matchers": "~1.0.1",
    "prettier": "^3.0.3",
    "rimraf": "~3.0.2",
    "run-script-os": "~1.1.6",
    "supertest": "~6.3.3",
    "swagger-cli": "~4.0.4",
    "swagger-jsdoc": "~6.2.8",
    "ts-jest": "~29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.567.0",
    "@aws-sdk/client-lambda": "~3.468.0",
    "@aws-sdk/client-s3": "~3.468.0",
    "@aws-sdk/lib-storage": "~3.468.0",
    "@aws-sdk/s3-presigned-post": "~3.468.0",
    "@aws-sdk/s3-request-presigner": "~3.468.0",
    "@sentry/aws-serverless": "^8.33.1",
    "@sentry/profiling-node": "^8.33.1",
    "ajv": "^8.12.0",
    "ajv-formats": "~2.1.1",
    "archiver": "~6.0.1",
    "aws-jwt-verify": "^4.0.1",
    "csv-parse": "~5.4.0",
    "csv-stringify": "^6.4.4",
    "mongoose": "^7.6.3"
  }
}
