{
  "name": "backend",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "clean": "rimraf -I build coverage deploy",
    "compile": "tsc --build tsconfig.prod.json",
    "prebuild": "npm run clean && npm run compile",
    "build": "esbuild ./src/index.ts ./src/import/async/index.ts --bundle --external: --tsconfig=tsconfig.prod.json --sourcemap --minify --platform=node --target=node16 --outdir=build --main-fields=module,main",
    "postbuild": "cp ./package.json ./build/ && (cd ./build; npm pkg delete devDependencies; npm pkg delete dependencies; npm pkg delete scripts) && cp ./build/package.json ./build/import/async && mkdir build/rest && mv build/index.js build/index.js.map build/package.json ./build/rest/",
    "test": "jest --coverage",
    "test:smoke": "jest --config jest.smoke.config.js --runInBand test/smoke/*.test.ts",
    "postinstall:win32": "cd .. & link-api-specifications.bat",
    "postinstall:darwin:linux": "(cd .. && ./link-api-specifications.sh)",
    "postinstall": "run-script-os",
    "generate:openapi": "ts-node ./openapi/generateOpenApiDoc.ts",
    "generate:swagger": "swagger-cli validate ./build/openapi/tabiya-api.json && cp -r ./openapi/swagger-ui-5.3.1-dist ./build/openapi/swagger && cp ./build/openapi/tabiya-api.json ./build/openapi/swagger/",
    "generate:redoc": "redocly lint build/openapi/tabiya-api.json && redocly build-docs ./build/openapi/tabiya-api.json --output ./build/openapi/redoc/index.html",
    "local-server:openapi": "http-server -c-1 build/openapi"
  },
  "devDependencies": {
    "@aws-sdk/s3-presigned-post": "^3.328.0",
    "@aws-sdk/client-lambda": "~3.338.0",
    "@aws-sdk/s3-request-presigner": "^3.338.0",
    "@types/aws-lambda": "~8.10.114",
    "@types/jest": "~29.5.0",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/supertest": "~2.0.12",
    "@shelf/jest-mongodb": "~4.1.7",
    "@types/swagger-jsdoc": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@redocly/cli": "~1.0.2",
    "esbuild": "~0.17.17",
    "eslint": "^8.40.0",
    "jest": "~29.5.0",
    "jest-performance-matchers": "~1.0.0",
    "rimraf": "~3.0.2",
    "run-script-os": "~1.1.6",
    "supertest": "~6.3.3",
    "swagger-cli": "~4.0.4",
    "swagger-jsdoc": "~6.2.8",
    "ts-jest": "~29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~4.4.2",
    "http-server": "~14.1.1"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "~2.1.1",
    "aws-sdk": "^2.1368.0",
    "mongoose": "^7.1.0",
    "csv-parse": "~5.4.0"
  }
}
