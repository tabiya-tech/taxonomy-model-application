{
  "name": "backend",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf build coverage deploy",
    "compile": "tsc --build tsconfig.prod.json",
    "prebuild": "npm run clean && npm run compile",
    "build": "esbuild ./src/index.ts --bundle --external: --tsconfig=tsconfig.prod.json --sourcemap --minify --platform=node --target=node16 --outdir=build",
    "postbuild": "cp ./package.json ./build/ && (cd ./build; npm pkg delete devDependencies; npm pkg delete dependencies; npm pkg delete scripts)",
    "test": "jest --coverage",
    "test:smoke": "jest --config jest.smoke.config.js --runInBand test/smoke/*.test.ts",
    "postinstall": "(cd .. && ./link-api-specifications.sh)"
  },
  "devDependencies": {
    "@types/aws-lambda": "~8.10.114",
    "@types/jest": "~29.5.0",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/supertest": "~2.0.12",
    "@shelf/jest-mongodb": "~4.1.7",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.40.0",
    "esbuild": "~0.17.17",
    "jest": "~29.5.0",
    "jest-performance-matchers": "~1.0.0",
    "supertest": "~6.3.3",
    "ts-jest": "~29.1.0",
    "typescript": "~4.4.2"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "~2.1.1",
    "mongoose": "^7.1.0"
  }
}
